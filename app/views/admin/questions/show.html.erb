<h1><%= @question.test.title %> Question</h1>

<p>
  <%= @question.body %>
</p>

<h2>Answers</h2>

<%= link_to 'New answer', 
            new_admin_question_answer_path(@question), 
            class: "btn btn-secondary btn-sm" %>

<ol>
  <%= render @question.answers %>
</ol>

<%= link_to 'Edit', edit_admin_question_path(@question), class: "btn btn-secondary btn-sm" %>
<%= link_to 'Back', admin_test_path(@question.test), class: "btn btn-secondary btn-sm" %>
<%= link_to 'Delete', admin_question_path(@question), 
            method: :delete, data: { confirm: 'Are you sure?' }, 
            class: "btn btn-secondary btn-sm" %>
